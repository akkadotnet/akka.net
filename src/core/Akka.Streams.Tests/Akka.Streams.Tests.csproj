    <PackageReference Include="System.Runtime.Extensions" Version="4.3.1" />
  </ItemGroup>
-->  

  <ItemGroup>
    <None Update="xunit.runner.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
